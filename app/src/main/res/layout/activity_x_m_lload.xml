<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".XMLloadActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/rg_xml"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_xmllog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <RadioGroup
        android:id="@+id/rg_xml"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/rb_simple_xml"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simple XML Entity" />

        <RadioButton
            android:id="@+id/rb_xxe1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXE 1" />

        <RadioButton
            android:id="@+id/rb_xxe2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXE 2" />

        <RadioButton
            android:id="@+id/rb_assets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="from assets" />

    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>